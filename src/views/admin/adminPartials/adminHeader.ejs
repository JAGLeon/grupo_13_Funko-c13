<header class="header-main">
    <div class="retenedor">
        <a href="/admin" class="header-logo"><img src="/img/Logo.svg" alt="Logo Funko"></a>
        <div class="header-search">
            <form action="">
                <input type="text" placeholder="Buscar">
                <button type="submit">
                    <i class="fa-solid fa-magnifying-glass"></i>
                </button>
            </form>
        </div>
        <nav class="header-navMenu">
            <div class="header-menuClose"><i class="fa-solid fa-xmark"></i></div>
            <div class="header-user">
                <div class="header-imgUser">
                    <% if (typeof session.usuario != "undefined") { %>
                        <img src="/img/users/<%= session.usuario.avatar %>" alt="Foto de perfil de <%= session.usuario.name  %> ">
                    <% } %> 
                </div>
                <div class="header-despliegeUser">
                    <% if (typeof session.usuario != "undefined") { %>
                        <button class="header-btnMenu"><%= session.usuario.name %> <i class="fa-solid fa-caret-down"></i></button>
                    <% } %> 
                    <ul class="header-ulUser">
                        <li><a href="/usuarios/perfil">Mi perfil</a></li>
                        <li><a href="/">Home</a></li>
                        <li><a href="/usuarios/salir">Cerrar Sesi√≥n</a></li>
                    </ul>
                </div>
            </div>
            <div class="header-search-menu">
                <form action="/search" method="GET">
                    <input type="search" placeholder="Buscar" name="search" >
                    <button type="submit">
                        <i class="fa-solid fa-magnifying-glass"></i>
                    </button>
                </form>
            </div>
            <div class="conteiner-redirecciones">
                <div class="header-despliegeUser">
                    <button class="header-btnMenu" id="header-btnMenu">Productos<i class="fa-solid fa-caret-down"></i></button>
                    <ul class="header-ulUser" id="header-ulUser">
                        <li><a href="/admin/productos">Listar</a></li>
                        <li><a href="/admin/productos/agregar">Agregar</a></li>
                    </ul>
                </div>
                <div class="header-despliegeUser">
                    <button class="header-btnMenu" id="header-btnMenu2">Franquicias<i class="fa-solid fa-caret-down"></i></button>
                    <ul class="header-ulUser" id="header-ulUser2">
                        <li><a href="/admin/franquicias">Listar</a></li>
                        <li><a href="/admin/franquicias/agregar">Agregar</a></li>
                    </ul>
                </div>
            </div>
        </nav>
        <button class="header-btnBars"><i class="fas fa-bars"></i> </button>
    </div>
</header>