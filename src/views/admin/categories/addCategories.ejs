<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('../adminPartials/adminHead') %>
<!-- END HEAD -->
<body>
<!-- HEADER -->
<%- include('../adminPartials/adminHeader') %> 
<!-- END HEADER -->
  <!-- MAIN -->
  <main class="container min-vh-100" id="category">
    <section class="admin">
      <h2 class="titleAdd">AGREGAR FRANQUICIA</h2>
      <form class="formAdd" action="/admin/franquicias" method="POST"  enctype="multipart/form-data">
        <div class="name">
          <label for="name" class="form-label">Nombre de la franquicia:</label>
          <input type="text" name="name" class="form-control" id="name" value="<%= (locals.old && old.name) ? old.name : "" %>">
          <% if (locals.errors && errors.name) { %>
            <div class="error">
              <small class="text-danger"><%= errors.name.msg%></small>
            </div>
          <% } %>
        </div>
        <div class="image">
          <label for="image" class="form-label">Im√°gen</label>
          <input type="file" name="image" class="form-control" id="image">
          <% if (locals.errors && errors.image) { %>
            <div class="error">
              <small class="text-danger"><%= errors.image.msg%></small>
            </div>
          <% } %>
        </div>
        <div class="button">
          <button type="submit">CREAR</button>
        </div>
      </form>
    </section>      
  </main>
<!-- END MAIN -->
<!-- FOOTER -->
<%- include('../adminPartials/adminFooter') %> 
<!-- END FOOTER -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>