<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('../adminPartials/adminHead') %>
<!-- END HEAD -->
<body>
<!-- HEADER -->
<%- include('../adminPartials/adminHeader') %> 
<!-- END HEADER -->
<!-- MAIN -->
  <main>
    <section class="admin">
      <h2 class="title">EDITAR FRANQUICIA: </h2>
      <h2 class="name"><%= category.name %></h2>
      <form class="formEdit" action="/admin/franquicias/<%= category.id %>?_method=PUT" method="POST"  enctype="multipart/form-data" id="formCategory">
        <small class="text-danger" id="fullErrors"></small>
        <div class="name">
          <label for="name" class="form-label">Nombre de la franquicia:</label>
          <input type="text" name="name" class="form-control" id="name" value="<%= category.name %>">
          <small class="text-danger" id="nameErrors"></small>
          <% if (locals.errors && errors.name) { %>
            <div class="error">
              <small class="text-danger"><%= errors.name.msg %></small>
            </div>
          <% } %>
        </div>
        <div class="image">
          <label for="image" class="form-label">Im√°gen</label>
          <div class="imgCategory" id="img-preview">
              <img src="/img/categorias/<%= category.image %>" alt="<%= category.name %>">
          </div>
          <input type="file" name="image" class="form-control" id="image" value="<%= category.image %>">
          <small class="text-danger" id="imageErrors"></small>
          <% if (locals.errors && errors.image) { %>
            <div class="error">
              <small class="text-danger"><%= errors.image.msg %></small>
            </div>
          <% } %>
        </div>
        <div class="button">
          <button type="submit">EDITAR</button>
        </div>
      </form> 
    </section> 
  </main>
<!-- END MAIN -->
<!-- FOOTER -->
<%- include('../adminPartials/adminFooter') %> 
<!-- END FOOTER -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
  <script src="/js/admin/categoryEditValidations.js"></script>
</body>
</html>