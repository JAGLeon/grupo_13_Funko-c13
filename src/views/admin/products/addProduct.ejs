<!DOCTYPE html>
<html lang="en">
<!-- HEAD -->
<%- include('../adminPartials/adminHead') %>
<!-- END HEAD -->
<body>
<!-- HEADER -->
<%- include('../adminPartials/adminHeader') %> 
<!-- END HEADER -->
  <!-- MAIN -->
  <main>
    <section class="admin">
      <h2 class="titleAdd">AGREGAR PRODUCTO</h2>
      <form class="formAdd" action="/admin/productos" method="POST">
        <div class="name">
          <label for="name" class="form-label">Nombre del producto</label>
          <input type="text" name="name" class="form-control" id="name">
        </div>
        <div class="price">
          <label for="price" class="form-label">Precio</label>
          <input type="number" name="price" class="form-control" id="price">
        </div>
        <div class="discount">
          <label for="discount" class="form-label">Descuento</label>
          <input type="number" name="discount" class="form-control" id="discount">
        </div>
        <div class="franquicia">
          <select name="categoryId" class="form-select select-add" id="category">
            <option selected hidden>Franquicia</option>
            <option value="1">Dc</option>
            <option value="2">Marvel</option>
            <option value="3">Disney</option>
            <option value="3">Star Wars</option>
            <option value="3">Anime</option>
            <option value="3">Game</option>
          </select>
        </div>
        <div class="image">
          <label for="image" class="form-label">Imágen</label>
          <input type="file" name="image" class="form-control" id="image">
        </div>
        <div class="form-check form-switch">
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckChecked" checked>
          <label class="form-check-label" for="flexSwitchCheckChecked">Stock</label>
        </div>
        <div class="description">
          <label for="description" class="form-label">Descripción</label>
          <textarea name="description" class="form-control" id="description" rows="3"></textarea>
        </div>
        <div class="button">
          <button type="submit">Crear</button>
        </div>
      </form>
    </section>      
  </main>
<!-- END MAIN -->
<!-- FOOTER -->
<%- include('../adminPartials/adminFooter') %> 
<!-- END FOOTER -->
